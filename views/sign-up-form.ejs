<!DOCTYPE html>
<html lang="en">
  <%- include("./reusable/head.ejs") %>
  <body>
    <%- include("./reusable/navbar.ejs")%>
    <div class="posts-container">
      <div class="post-create">
        <h1>Sign up!</h1>
        <form action="/sign-up" method="POST" class="form-post">
          <fieldset>
            <label for="name_first">First name</label>
            <input
              name="name_first"
              id="name_first"
              type="text"
            />
            <label for="name_last">Last name</label>
            <input
              name="name_last"
              id="name_last"
              type="text"
            />
          </fieldset>
          <fieldset id="style-fieldset">
            <label for="username">Username</label>
            <input
              name="username"
              id="username"
              type="text"
            />
            <label for="password">Password</label>
            <input
              name="password"
              id="password"
              type="password"
              autocomplete="new-password"
            />
          </fieldset>
          <button>Sign Up</button>
        </form>
      </div>
    </div>
    <% if(errors !== undefined) { %> 
      <ul>
      <% errors.forEach(err => { %>
        <li><%=  err.msg %> </li>
      <% }) %> 
      </ul>
    <% } %> 
  </body>
</html>
